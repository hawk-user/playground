{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2022"],
        "module": "ESNext",
        "moduleDetection": "force",
        "verbatimModuleSyntax": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "noUncheckedSideEffectImports": true,
        "erasableSyntaxOnly": true,
        "allowJs": false,
        "noEmit": false,
        "baseUrl": ".",
        "paths": {
            "@libs/core": ["libs/core/source/index.ts"],
            "@libs/infra/*": [ "libs/infra/*/index.ts" ],
            "@libs/presentation": ["libs/presentation/source/*/index.ts"],
            "@libs/utils": ["libs/utils/source/index.ts"]
        }
    }
}